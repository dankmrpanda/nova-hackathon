{
  "name": "codebase-onboarding-agent",
  "version": "0.1.0",
  "private": true,
  "description": "Interactive onboarding agent that explains architecture, traces data flow, runs examples, and generates docs.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "onboard": "dist/index.js"
  },
  "scripts": {
    "dev": "ts-node src/index.ts",
    "dev:server": "ts-node src/server/api.ts",
    "dev:web": "cd web && npm run dev",
    "dev:all": "concurrently \"npm run dev:server\" \"npm run dev:web\"",
    "build": "tsc -p tsconfig.json",
    "build:web": "cd web && npm run build",
    "test": "jest --passWithNoTests",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@octokit/rest": "^21.0.2",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "inquirer": "^9.2.22",
    "ora": "^8.1.0",
    "simple-git": "^3.24.0",
    "ts-morph": "^23.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.7.6",
    "concurrently": "^9.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "roots": [
      "<rootDir>/tests"
    ],
    "collectCoverage": false
  }
}
